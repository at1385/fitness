{
  "name": "vanilla-gulp-template",
  "version": "1.0.0",
  "description": "Стартовое состояние разработки front-end проектов без использования фреймворков с применением gulp",
  "author": "Alexander Tikhonov",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "autoprefixer": "^10.3.1",
    "browser-sync": "^2.27.5",
    "eslint": "^7.32.0",
    "eslint-config-htmlacademy": "2.0.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svgstore": "^8.0.0",
    "gulp-webp": "^4.0.1",
    "pixel-glass": "^1.0.13",
    "postcss": "^8.3.6",
    "stylelint": "^13.13.1",
    "stylelint-config-htmlacademy": "^0.1.10"
  },
  "dependencies": {
    "del": "^6.0.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "test": "npm run editorconfig && npm run stylelint && eslint source/js/*.js",
    "build": "gulp build",
    "start": "gulp start"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/sass/**/*.{sass,scss}"
  ],
  "engines": {
    "node": ">=10"
  }
}
